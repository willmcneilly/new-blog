<section id="articles">
  <% for article in articles[0...10] %>
    <article class="post">
      <header>
        <h1><a href="<%= article.path %>"><%= article.title %></a></h1>
      </header>

      <section class="content">
        <%= article.mysummary %>
      </section>
      <div class="more"><a href="<%= article.path %>">read on &raquo;</a></div>
      <footer class="meta">
        <span class="article-date"><%= article.date %></span>
      </div>
    </article>
    <% end %>
</section>


<section id="archives">
  <%= archives[3..-1] %>
</section>

