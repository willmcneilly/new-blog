<article class="post">
  <header class="article-header">
    <h1><%= title %></h1>
  </header>
  <section class="main-content">
    <p class="lead-in"><%= mysummary %></p>
    <%= body %>
  </section>
  <footer class="meta">
    <span class="article-date"><%= date %></span>
    <br/>
    <% unless tags.empty? %>
      <ul class="tags">
        <% for tag in tags %>
          <li><a href="/tag/<%= tag %>"><%= tag %></a></li>
        <% end %>
      </ul>
    <% end %>
  </footer>
</article>

